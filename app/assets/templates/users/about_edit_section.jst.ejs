<form>
  <div class='clearfix'>
    <p class='pull-right margin-top-none'>
      <a href="#" class='font-smaller cancel-edit uppercase grey-color'>Cancel</a>
      <input type="submit" value='SAVE'>
    </p>
  </div>
  <div class='row form-group'>
    <div class='col-3 uppercase grey-color'>Bio</div>
    <div class='col-9'>
      <textarea name="bio" class='form-field'><%= model.get('bio') %></textarea>
    </div>
  </div>
  <div class='row form-group'>
    <div class='col-3 uppercase grey-color'>Aspirations</div>
    <div class='col-9'>
      <textarea name="aspirations" class='form-field'><%= model.get('aspirations') %></textarea>
    </div>
  </div>
  <div class='row form-group'>
    <div class='col-3 uppercase grey-color'>Achievements</div>
    <div class='col-9'>
      <textarea name='achievements' class='form-field'><%= model.get('achievements') %></textarea>
    </div>
  </div>
  <div class='row form-group'>
    <div class='col-3 uppercase grey-color'>Skills</div>
    <div class='col-9'>
      <select multiple="true" class='js-select2-tags'></select>
    </div>
  </div>
  <div class='row form-group'>
    <div class='col-3 uppercase grey-color'>What I'm Looking For</div>
    <div class='col-9'>
      <textarea name="looking_for" class='form-field'><%= model.get('looking_for') %></textarea>
    </div>
  </div>
</form>