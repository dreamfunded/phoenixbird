              <div class='edit_fin_info'>
                <span>Costs of Goods Sold prior fiscal year</span><br>
                <%= fin_details.number_field :costs_of_goods_last_year, placeholder: 'Costs of Goods Sold prior fiscal year' %>
              </div>
              <hr>
            </div>

            <div>
