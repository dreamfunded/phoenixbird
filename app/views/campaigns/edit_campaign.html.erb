<html>
  <head>
    <title>DreamFunded | Edit </title>
  </head>
  <body>
    <div class= "word-content"><div class="text-content stretch">
      <%= form_for(@company, :url => url_for(:controller => 'campaigns', :action => 'update_campaign') ) do |f| %>
        <% if @company.errors.any? %>
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this company from being saved: </h2>

          <ul>
            <% @company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      <div class= "topbar">
        <a href= "/companies" class= "darkblue">&#8617; Back</a>
      </div>
      <div class= "company-title indent">
        <h2 class= "darkblue small-margin">
          <%= f.text_field :name, :class => 'input-box half' %>
          <%= f.text_field :website_link, :class => 'input-box half scoot-left' %>
          <%= f.fields_for :campaign, @company.campaign do |campaign_fields| %>

            <%= campaign_fields.text_field :tagline, placeholder: 'Describe your company in one sentence',:class => "input-box", required:true %>
          <% end %>
        </h2>
      </div>
      <div class= "stats-container">
        <div class= "profile-image-wrap"> <%= link_to image_tag(@company.image.url, :class => "stats-image"), @company.website_link %></div>
        <div class='center'><span class= "darkblue twenty">Change Image: </span><%= f.file_field "image" %></br></br></div>
        <div class='center'><span class= "darkblue twenty"><%= link_to "Upload Docs", new_document_path(:company_id => @company.id) %> </span></br></br></div>

        <div class='center'>
          <span class= "darkblue twenty">Documents: </span>
          <% @company.documents.each do |doc|%>
            <p class= "no-margin"><%= image_tag "static/pdf_icon.png" %> <%= link_to doc.file_file_name, doc.file.url, target: "_blank", class: 'document-url' %><br><%= link_to 'Destroy', doc, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
        </div><br>

        <div class= "numbers"><div class= "numbers-content">
          <div class="meter orange">
            <% @progress = ((@company.invested_amount.to_f / @company.goal_amount.to_f).to_f) *100 %>
            <% if @progress == 0 %>
              <span class= "front" style="width: 5px"></span>
            <% else %>
              <span style='width: <%= @progress %>%'></span>
            <% end %>
          </div><br>
          <div class= 'statistics'>
            <div>
              <p class= "twenty no-margin center"><%= f.number_field :goal_amount, :class => 'input-box no-margin center' %><br><span class= "darkblue twenty">Goal Amount </span> </p>
            </div>

            <div>
              <p class= "twenty no-margin center">
                <%= f.text_field :video_link, :class => 'input-box no-margin center' %><br>
                <span class= "darkblue twenty">Video Link</span>
              </p>
            </div>

            <div>
                <%= f.fields_for :campaign, @company.campaign do |campaign_fields| %>
                  <p class= "twenty no-margin center">
                    <%= campaign_fields.text_field(:category, :class => 'input-box no-margin center', required:true ) %>
                    <span class= "darkblue twenty">Category</span>
                  </p>
                  <p class= "twenty no-margin center">
                    <%= campaign_fields.text_field(:employees_numer, :class => 'input-box no-margin center', required:true ) %>
                    <span class= "darkblue twenty">Number of Employees</span>
                  </p>
                <% end %>
            </div>




          </div>
        </div></div>

        <div class= "fake-button"> Invest </div>
      </div>

      <div class= "description-container">
        <div class= "video-box">
            <%= image_tag(@company.image.url, class: "max-width-image")%>
        </div>
        <br><br><br><br>
        <h2 class= "darkblue twentyf indent">Highlight</h2>
        <hr>
        <p class= "fifteen"><%= f.text_area :description, rows: 10, :class => 'edit_textarea twenty no-margin' %></p>
        <br>

        <h2 class= "darkblue twentyf indent">Why <%= @company.name %></h2>
        <p class= "fifteen">
          <%= f.fields_for :campaign, @company.campaign do |campaign_fields| %>
            <p class= "fifteen"><%= campaign_fields.text_area :elevator_pitch, rows: 10, :class => 'edit_textarea twenty  no-margin ' %></p>
            <h2 class= "darkblue twentyf indent">Our Mission</h2>
            <p class= "fifteen"><%= campaign_fields.text_area :about_campaign, rows: 10, :class => ' edit_textarea twenty no-margin ' %></p>
          <% end %>
        </p>
        <%= f.fields_for :financial_detail do |fin_details| %>
          <h2 class= "darkblue category-name indent">Offering Terms</h2>
          <%= fin_details.text_area :offering_terms, rows: 6, :class => 'twenty edit_textarea no-margin ' %>
          <h2 class= "darkblue category-name indent">Financial Risks</h2>
          <%= fin_details.text_area :fin_risks, rows: 6, :class => 'twenty edit_textarea no-margin ' %>

          <div>
            <div class='edit_fin_info' >
              <span>Total Income</span><br>
              <%= fin_details.number_field :totat_income, placeholder: 'Total Income' %>
            </div>
            <div class='edit_fin_info'>
              <span>Total Taxable Income</span><br>
              <%= fin_details.number_field :total_taxable_income, placeholder: 'Total Taxable Income' %>
            </div>
            <div class='edit_fin_info'>
              <span>Total Taxes Paid</span><br>
              <%= fin_details.number_field :total_taxes_paid, placeholder: 'Total Taxable Income' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Total assets most recent fiscal year</span><br>
              <%= fin_details.number_field :total_assets_this_year, placeholder: 'Total assets most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Total assets prior fiscal year</span><br>
              <%= fin_details.number_field :total_assets_last_year, placeholder: 'Total assets prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Cash & Cash Equivalents most recent fiscal year</span><br>
              <%= fin_details.number_field :cash_this_year, placeholder: 'Cash & Cash Equivalents most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Cash & Cash Equivalents prior fiscal year</span><br>
              <%= fin_details.number_field :cash_last_year, placeholder: 'Cash & Cash Equivalents prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Accounts Receivable recent fiscal year</span><br>
              <%= fin_details.number_field :acount_receivable_this_year, placeholder: 'Accounts Receivable recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Accounts Receivable prior fiscal year</span><br>
              <%= fin_details.number_field :acount_receivable_last_year, placeholder: 'Accounts Receivable prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Short-term Debt most recent fiscal year</span><br>
              <%= fin_details.number_field :short_term_debt_this_year, placeholder: 'Short-term Debt most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Short-term Debt prior fiscal year</span><br>
              <%= fin_details.number_field :short_term_debt_last_year, placeholder: 'Short-term Debt prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Long-term Debt most recent fiscal year</span><br>
              <%= fin_details.number_field :long_term_debt_this_year, placeholder: 'Long-term Debt most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Long-term Debt prior fiscal year</span><br>
              <%= fin_details.number_field :long_term_debt_last_year, placeholder: 'Long-term Debt prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Revenues / Sales most recent fiscal year</span><br>
              <%= fin_details.number_field :sales_this_year, placeholder: 'Revenues / Sales most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Revenues / Sales prior fiscal year</span><br>
              <%= fin_details.number_field :sales_last_year, placeholder: 'Revenues / Sales prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Costs of Goods Sold most recent fiscal year</span><br>
              <%= fin_details.number_field :costs_of_goods_this_year, placeholder: 'Costs of Goods Sold most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Costs of Goods Sold prior fiscal year</span><br>
              <%= fin_details.number_field :costs_of_goods_last_year, placeholder: 'Costs of Goods Sold prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Taxes Paid most recent fiscal year</span><br>
              <%= fin_details.number_field :taxes_paid_this_year, placeholder: 'Taxes Paid most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Taxes Paid prior fiscal year</span><br>
              <%= fin_details.number_field :taxes_paid_last_year, placeholder: 'Taxes Paid prior fiscal year' %>
            </div>
            <hr>
          </div>

          <div>
            <div class='edit_fin_info' >
              <span>Net Income most recent fiscal year</span><br>
              <%= fin_details.number_field :net_income_this_year, placeholder: 'Net Income most recent fiscal year' %>
            </div>
            <div class='edit_fin_info'>
              <span>Net Income prior fiscal year</span><br>
              <%= fin_details.number_field :net_income_last_year, placeholder: 'Net Income prior fiscal year' %>
            </div>
            <hr>
          </div>



        <% end %>

      </div>

      <div class = "notice centered">
        <%= flash[:problem_update] if flash[:problem_update] %>
        <%= @error_update %>
      </div>
      <%= f.submit "Update", :class => 'invest-button' %>
    <% end %>
    </div></div>
  </body>

</html>
