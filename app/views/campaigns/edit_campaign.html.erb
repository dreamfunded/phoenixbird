              <%= campaign_fields.text_field :company_location_city, placeholder: 'City',:class => " campaing_editable_fields   darkblue", required:true %>
              <%= campaign_fields.text_field :company_location_state, placeholder: 'State',:class => " campaing_editable_fields   darkblue", required:true %>
            <% end %>

        <div class= "video-box">
          <% if @company.video_link.empty? || @company.video_link == nil %>
            <%= image_tag( @company.image.url, class: 'image-max-width')%>
          <% else %>
            <iframe  class='youtube-video' src= <%= @company.video_link %> frameborder="0" allowfullscreen ></iframe>
          <% end %>
          <div>
            <%= f.submit "Update", :class => 'invest-button' %>
          </div>
          <div>
            <%= link_to "Forc C Editor", "/formc/general", :class => 'invest-button', id: 'formc-button' %>
          </div>
        </div>
      </div>
      <div class= "stats-container">
        <div class= "profile-image-wrap"> <%= link_to image_tag(@company.image.url, :class => "stats-image"), @company.website_link %></div>
        <div class='center'><span class= "darkblue twenty">Change Image: </span><%= f.file_field "image" %></br></br></div>


        <div class= "numbers"><div class= "numbers-content">
          <div class="meter orange">
            <% @progress = ((@company.invested_amount.to_f / @company.goal_amount.to_f).to_f) *100 %>
            <% if @progress == 0 %>
              <span class= "front" style="width: 5px"></span>
            <% else %>
              <span style='width: <%= @progress %>%'></span>
            <% end %>
          </div><br>
          <div class= 'statistics'>
            <div>
              <p class= "twenty no-margin center"><%= f.number_field :goal_amount, :class => 'input-box no-margin center' %><br><span class= "darkblue twenty">Goal Amount </span> </p>
            </div>

            <div>
              <p class= "twenty no-margin center">
                <%= f.text_field :video_link, :class => 'input-box no-margin center' %><br>
                <span class= "darkblue twenty">Video Link</span>
              </p>
            </div>

            <div>
                <%= f.fields_for :campaign, @company.campaign do |campaign_fields| %>
                  <p class= "twenty no-margin center">
                    <%= campaign_fields.text_field(:category, :class => 'input-box no-margin center', required:true ) %>
                    <span class= "darkblue twenty">Category</span>
                  </p>
                  <p class= "twenty no-margin center">
                    <%= campaign_fields.text_field(:employees_numer, :class => 'input-box no-margin center', required:true ) %>
                    <span class= "darkblue twenty">Number of Employees</span>
                  </p>
                <% end %>
            </div>

            <div>
              <p class= "twenty no-margin center">
                <%= f.text_field :website_link, :class => 'input-box no-margin center' %><br>
                <span class= "darkblue twenty">Website Link</span>
              </p>
            </div>



          </div>
        </div>
      </div>

      <div class= "fake-button"> Invest </div>
      </div>

      <div class= "description-container">

        <a  class='tab-name about_tab active-tab darkblue twentyf'>Company</a>
