<div class="nested-fields member-box">
  <div class="field">
    <%= f.text_field :name, class: 'form-field required-field', placeholder: "Full Name" %>
  </div>
  <br>

  <div class="field">
    <%= f.text_field :position, class: 'form-field required-field', placeholder: "Title" %>
  </div>
  <br>

  <label>Upload Team Member Photo: </label>


  <% if f.object.image? %>
      <br>
      <%= image_tag( f.object.image.url, class: 'company-members')%>
      <br>
      Update Photo<%= f.file_field :image %>
  <% else %>
      <%= f.file_field :image, class: "required-field" %>
  <% end %>

  <br>

  <div class="field">
    <%= f.text_area :content, class: 'form-field form-field-textarea required-field', rows: 4, placeholder: 'Team Member Biography' %>
  </div>

  <br>
  <%= link_to_remove_association( f, class: "add-remove-member" ) do %>
    <i class="fa fa-trash-o" aria-hidden="true"></i>
    <span>Remove Team Member</span>
  <% end %>
  <br/>
</div>

<br>
