<% title "DreamFunded | Campaign Details" %>

<div class="stepTop">
  <div class="container">
    <div class="stepTop__title">
      <h2>Campaign Details</h2>
    </div>
    <div class="stepTop__steps">
      <div class="stepTop__steps__inn clearfix">
        <div class="stepTop__steps__it completed">
          <div class="stepTop__steps__it__txt"><span>Step 1</span></div>
        </div>
        <div class="stepTop__steps__it active">
          <div class="stepTop__steps__it__txt"><span>Step 2</span></div>
        </div>
        <div class="stepTop__steps__it ">
          <div class="stepTop__steps__it__txt"><span>Step 3</span></div>
        </div>
        <div class="stepTop__steps__it">
          <div class="stepTop__steps__it__txt"><span>Step 4</span></div>
        </div>
      </div>
    </div>
  </div>
</div>
    <div class="step">
      <div class="container">
        <div class="step__inn">
          <!-- <div class="step__title">
            <h3>Campaign Details</h3>
          </div> -->
          <!-- <div class="step__subtitle"><span>Share your story, build a community</span></div> -->
          <div class="step2">
            <%= form_for @campaign, :url => {:action => "company_description_submit"} do |f| %>
              <%= hidden_field_tag :company_id, @company.id %>
              <%= hidden_field_tag :campaign_id, @campaign.id %>
              <!-- <div class="step2__top">
                <div class="step1__list">
                  <ul class="reset-list">
                    <li>ALL information in this step will be made publicly available</li>
                  </ul>
                </div>
              </div> -->
              <div class="step2__blocks">
                <div class="step2__block">
                  <div class="step2__block__title"><span>Video Link</span></div>
                  <div class="step2__block__subtitle"><span>Use full Youtube URL</span></div>
                  <div class="input-wrap">
                    <%= text_field_tag :video_link, @company.video_link, placeholder: 'Select Youtube Video (optional)' %>
                  </div>
                </div>
                <div class="step2__block">
                  <div class="step2__block__title"><span>Elevator Pitch</span></div>
                  <div class="step2__block__subtitle"><span>An elevator pitch can be said in 30 seconds What makes your company exceptional? Why should the crowd invest in your company? All information and claims presented must be accurate and backed by fact.</span></div>
                  <div class="">
                     <%= f.text_area :elevator_pitch, class: 'ckeditor' %>
                  </div>
                </div>
                <div class="step2__block">
                  <div class="step2__block__title"><span>About Your Company</span></div>
                  <div class="step2__block__subtitle"><span>Be creative with this section. You have the ability to add videos and images to make your message stand out. A well designed description of your company will set you apart. Your presentation must be factual and accurate.</span></div>
                  <div class="input-wrap">
                    <%= f.text_area :about_campaign, class: 'ckeditor' %>
                  </div>
                </div>
                <div class="step2__block">
                  <div class="step2__block__title"><span>Number of Current Employees</span></div>
                  <div class="input-wrap">
                    <%= f.text_field :employees_numer%>
                  </div>
                </div>
              </div>
              <div class="step__btn">
                <div class="step__btn__inn">
                  <button type="submit" class="btn btn-blue">Continue</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
