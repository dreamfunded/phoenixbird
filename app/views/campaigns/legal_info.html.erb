<% title "DreamFunded | Invest" %>


<div class="stepTop">
          <div class="container">
            <div class="stepTop__title">
              <h2>Legal Info</h2>
            </div>
            <div class="stepTop__steps">
              <div class="stepTop__steps__inn clearfix">
                <div class="stepTop__steps__it completed">
                  <div class="stepTop__steps__it__txt"><span>Step 1</span></div>
                </div>
                <div class="stepTop__steps__it completed">
                  <div class="stepTop__steps__it__txt"><span>Step 2</span></div>
                </div>
                <div class="stepTop__steps__it active">
                  <div class="stepTop__steps__it__txt"><span>Step 3</span></div>
                </div>
                <div class="stepTop__steps__it ">
                  <div class="stepTop__steps__it__txt"><span>Step 4</span></div>
                </div>
              </div>
            </div>
          </div>
</div>
<div class="step">
  <div class="container">
    <div class="step__inn">
      <!-- <div class="step__title">
        <h3>Register Correctly</h3>
      </div>
      <div class="step__subtitle"><span>Please review this information with legal counsel</span></div> -->
      <div class="step2">
        <%= form_for @campaign, :url => {:action => "legal_info_submit"},method: "post" do |f| %>
          <%= hidden_field_tag :campaign_id, @campaign.id %>
          <!-- <div class="step2__top">
            <div class="step1__list">
              <ul class="reset-list">
                <li>This information must be accurate in order to launch your campaign. Make sure you get it right and keep it updated!</li>
                <li>This information is for admin use only, but your Company Location will appear on your profile.</li>
              </ul>
            </div>
          </div> -->
          <div class="step2__blocks">
            <div class="step2__block">
              <div class="input-wrap">
                <%= f.text_field :legal_company_name, placeholder: 'Legal Company Name' %>
              </div>
              <div class="input-wrap">
                <%= f.text_field :state_where_incorporated, placeholder: 'State Where Incorporated' %>
              </div>
            </div>
            <div class="step2__block">
              <div class="step2__block__title"><span>Company Location</span></div>
              <div class="input-row row">
                <div class="col-xs-6">
                  <div class="input-wrap">
                    <%= f.text_field :company_location_address, placeholder: 'Address' %>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="input-wrap">
                    <%= f.text_field :company_location_city, placeholder: 'City' %>
                  </div>
                </div>
              </div>
              <div class="input-row row">
                <div class="col-xs-6">
                  <div class="input-wrap">
                    <%= f.text_field :company_location_state, placeholder: 'State' %>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="input-wrap">
                    <%= f.text_field :company_location_zipcode, placeholder: 'Zipcode' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="step__btn">
            <div class="step__btn__inn">
              <button type="submit" class="btn btn-blue">Complete</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
