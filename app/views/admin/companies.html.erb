  <html>
<head>
  <title>PhoenixBird | Write</title>
</head>

<body>
  <div class= "wrapper">
    <div class= "header"><h1 class= "centered">Administration Panel</h1></div>

    <div class= "word-content"><div class= "text-content">
      <div class='centered'>
        <%= button_to "Users", '/users/admin', :method => 'get', class: 'invest-button invest-now-button ' %>
      </div>
        <table id="user-table">
         <tr>
          <th>Name</th>
          <th>WEBSITE LINK</th>
          <th>INVESTED AMOUNT</th>
          <th>GOAL AMOUNT</th>
         </tr>
            <% @companies.each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td><%= company.website_link %></td>
                <td><%= company.invested_amount %></td>
                <td><%= company.goal_amount %></td>
              </tr>
          <% end %>
        </table>

    </div></div>
  </div>

</body>
</html>
