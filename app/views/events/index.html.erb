<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Date</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.link %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<head>
  <% title "DreamFunded | Events" %>
</head>

<div class= "wrapper">
  <div class="header">
    <h1 class="centered">Events</h1>
  </div>
  <div class= "word-content">
    <% @events.each do |event| %>
      <div class='event'>
        <div class='event-name'><%= event.name %></div>
        <span class='event-date'><i class="fa fa-calendar"></i><%= event.date.to_formatted_s(:long) %></span><span class='event-location'><i class="fa fa-map-marker"></i><%= event.location %></span>
      </div>
    <% end %>
  </div>
</div>
