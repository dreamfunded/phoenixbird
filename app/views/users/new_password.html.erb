<html>
<head>
  <title>PhoenixBird | Log In</title>
</head>

<body>
  <div class= "wrapper"><div class= "box signin-box centered">

    <div class="row">
      <div class=" darkblue active">
        <h2 class= "no-margin centered"><a  id="login-form-link">Reset Password</a></h2>
      </div>
    </div>

    <div class= "login-container">
      <%= form_tag("reset_password", method: "post") do %>
        <%= hidden_field_tag(:email, @user.email)%>
        <%= password_field_tag(:password, nil, :class =>"userbox", :placeholder => "Password") %>
        <br>
        <%= password_field_tag(:password_confirmation, nil, :class =>"userbox", :placeholder => "Password Confirmation") %>
        <br>

          <div class = "notice centered">
            <%= flash[:notice] if flash[:notice] %>
            <%= @error_message %>
          </div>
        <div class= "centered">
          <%= submit_tag("Reset Password", :class => "login-button") %>
        </div>
      <% end %>
    </div>


  </div>
</div>
</body>

</html>
