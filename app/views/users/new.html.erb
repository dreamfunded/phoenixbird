<html>
<head>
   <%= stylesheet_link_tag    'signup', media: 'all' %>
   <title>DreamFunded | Sign Up</title>
</head>

<body>
   <div class= "signup-box">
      <h2 class= "centered">Sign up</h2>
      <h4>Basic Information</h4>
      <%= form_tag("create", method: "post") do %>
         <%= text_field_tag(:first_name, nil, :placeholder => "First Name", :class => "input-box half") %>
         <div class= "filler"></div>
         <%= text_field_tag(:last_name, nil, :placeholder => "Last Name", :class => "input-box half scoot-left") %><br>
         <%= text_field_tag(:email, nil, :placeholder => "Email", :class => "input-box") %>

      <h4>Login Information</h4>
         <%= text_field_tag(:login, nil, :placeholder => "Username", :class => "input-box") %><br>
         <%= password_field_tag(:password, nil, :placeholder => "Enter Password", :class => "input-box half") %>
         <%= password_field_tag(:password_confirmation, nil, :placeholder => "Confirm Password", :class => "input-box half scoot-left") %><br>
         <h4> Ceritfy yourself as an investor </h4>
         <div class = "check_box">
           <input type="checkbox" name="net_worth" > My net worth is over $1 million, excluding my home.<br>
           <input type="checkbox" name="income" > My income was $200k+ for the past two years.<br>
           <input type="checkbox" name="investor" > I invest from an accredited business, family office or VC.<br>
           <input type="checkbox" name="reg" > I am not accredited, but will invest under Reg A+.<br>
        </div>
         <div class= "centered">
            <p>A questionnaire will be sent to your email shortly to determine your account type.</p>
         </div>

         <div class = "notice centered">
            <%= flash[:notice] if flash[:notice] %>
            <%= @error_message %>
         </div>

         <div class= "centered">
            <%= submit_tag("Submit", :class => "submit-button centered") %>
         </div>

      <% end %>

    </div>

</body>
</html>
