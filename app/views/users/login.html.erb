<html>
<head>
	<title>DreamFunded | Log In</title>
</head>

<body>
	<div class= "wrapper"><div class= "box signin-box centered">

		<div class="row">
			<div class="tab right-line darkblue active">
				<h2 class= "no-margin centered"><a href="/users/login" id="login-form-link">Login</a></h2>
			</div>
			<div class="tab darkblue nodec">
				<h2 class= "no-margin centered"><a href="/users/new" id="register-form-link">Sign Up</a></h2>
			</div>
		</div>

		<div class= "login-container">
			<%= form_tag("post_login", method: "get") do %>
				<%= text_field_tag(:username, nil, :class =>"userbox", :placeholder => "Username") %>
				<br>
				<%= password_field_tag(:password, nil, :class => "passbox", :placeholder => "Password") %>
				<br>
					<div class = "notice centered">
						<%= flash[:notice] if flash[:notice] %>
						<%= @error_message %>
					</div>
				<div class= "centered">
					<%= submit_tag("Login", :class => "login-button") %>
				</div>
			<% end %>
		</div>

		<div class= "centered">
			<form action="/users/new">
		   		<input type="submit" value="Sign up here" class= "signup">
			</form>
		</div>
	</div>
</div>
</body>

</html>