<% title "DreamFunded | Get Funded" %>
<div class= "wrapper"><div class= "box get-funded ">

  <div class="row">
    <div class=" active">
      <h2 class= "darkblue no-margin centered"><a  id="login-form-link">Register as an Investor Today</a></h2>
      <br>
    </div>
  </div>

  <div class= "login-container">
    <%= form_for Investor.new, url: "/personal_submit/#{@company.name}",method: :post,  multipart: true do |f| %>
      <%= hidden_field_tag :user_id, @user.id %>
      <%= text_field_tag(:email, @user.email,:placeholder => "Email", :class => "input-box", required:true) %><br>

      <%= text_field_tag(:first_name, @user.first_name,:placeholder => "First Name", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:last_name, @user.last_name,:placeholder => "Last Name", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:country, nil,:placeholder => "Country", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:ssn, nil,:placeholder => "SSN or Tax ID Number", :class => "input-box",required:true) %><br>

      <label>Date of Birth</label>
      <%= date_field_tag(:date_of_birth, nil,:placeholder => "Date of Birth", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:address, nil,:placeholder => "Address", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:city, nil,:placeholder => "City", :class => "input-box public-address",required:true) %>

      <%= text_field_tag(:state, nil,:placeholder => "State", :class => "input-box public-address address-margin",required:true) %>

      <%= text_field_tag(:zipcode, nil,:placeholder => "Zipcode", :class => "input-box public-address address-margin",required:true) %><br>

      <%= text_field_tag(:phone, @user.phone,:placeholder => "Phone", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:drive_license, nil,:placeholder => "Driver's License Number or Other Valid ID Number", :class => "input-box",required:true) %><br>

      <label for = "file">Upload Driver's License or Other Valid ID</label> <%= f.file_field "image" %><br>

      <div class = "notice centered">
        <%= flash[:errors] if flash[:errors] %>
      </div>

      <div class= "centered">
        <%= submit_tag("Continue", :id => "submit-button") %>
      </div>
    <% end %>
  </div>

</div>
