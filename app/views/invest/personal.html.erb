<% title "DreamFunded | Get Funded" %>
<div class= "wrapper">

  <div class="header education-center">
    <div class='education-title'>Invest in <%= @company.name %></div>
    <a href="#" class='education-links active-link'>Personal Info</a> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links disabled-link'>Investor Details</a> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links disabled-link'>Educational Disclaimer</a> <%= fa_icon "chevron-right"%>
    <span href="#" class='education-links disabled-link'> Subscription Agreement </span> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links disabled-link'> Pre-Purchase </a>
  </div>

  <div class= "campaign-box get-funded">
    <div class="row">
      <div class=" active">
        <h2 class= "darkblue no-margin centered"><a  id="login-form-link">Register as an Investor Today</a></h2>
        <br>
      </div>
    </div>

  <div class= "login-container">
    <%= form_for @investor, url: "/personal_submit/#{@company.name}",method: :post,  multipart: true do |f| %>
      <%= hidden_field_tag :user_id, @user.id %>
      <%= text_field_tag(:email, @user.email,:placeholder => "Email", :class => "input-box", required:true) %><br>

      <%= text_field_tag(:first_name, @user.first_name,:placeholder => "First Name", :class => "input-box",required:true) %><br>

      <%= text_field_tag(:last_name, @user.last_name,:placeholder => "Last Name", :class => "input-box",required:true) %><br>

      <%= f.text_field(:country, {value: @investor.country,:placeholder => "Country", :class => "input-box",required:true} ) %><br>

      <%= f.text_field(:ssn, :placeholder => "SSN or Tax ID Number", :class => "input-box",required:true) %><br>

      <label>Date of Birth</label>
      <%= f.date_field(:date_of_birth, :placeholder => "mm/dd/yyyy", :class => "input-box",required:true) %><br>

      <%= f.text_field(:address, :placeholder => "Address", :class => "input-box",required:true) %><br>

      <%= f.text_field(:city, :placeholder => "City", :class => "input-box public-address",required:true) %>

      <%= f.text_field(:state, :placeholder => "State", :class => "input-box public-address address-margin",required:true) %>

      <%= f.text_field(:zipcode, :placeholder => "Zipcode", :class => "input-box public-address address-margin",required:true) %><br>

      <%= text_field_tag(:phone, @user.phone,:placeholder => "Phone", :class => "input-box",required:true) %><br>

      <%= f.text_field(:drive_license, :placeholder => "Driver's License Number or Other Valid ID Number", :class => "input-box",required:true) %><br>

      <label for = "file">Upload Driver's License or Other Valid ID</label> <%= f.file_field "image" %><br>

      <div class = "notice centered">
        <%= flash[:errors] if flash[:errors] %>
      </div>

      <div class= "centered">
        <%= submit_tag("Continue", :id => "submit-button") %>
      </div>
    <% end %>
  </div>

</div>
