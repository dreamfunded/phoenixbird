<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title,class: 'posts-form' %><br>
    <%= f.text_area :title, size: "60x1", class: 'posts-form' %>
  </div>
  <div class="field">
    <%= f.label :content, class: 'posts-form' %><br>
    <%= f.text_area :content, size: "70x15", class: 'posts-textarea ckeditor'  %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%#= f.label :page %><br>
    <%#= f.select( :page, options_for_select([['FAQ', 'faq'],['About US','about_us']]) ) %>
    <%= f.hidden_field(:page, value: @page) %>
  </div>
  <div class="field">
    <%= f.label :position, 'Position from 1 to Infinity. Smaller number goes on top' %><br>
    <%= f.text_field :position %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script type="text/javascript">

      $('.ckeditor').ckeditor({
        // optional config
      });
</script>
