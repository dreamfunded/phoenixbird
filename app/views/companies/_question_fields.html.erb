<div class="nested-fields member-box document-box">

    <div>
        <label>Question:</label>
        <%= f.text_field :question, class: 'form-field ' %>
    </div>

    <div>
        <label>Answer:</label>
        <%= f.text_area :answer, class: 'form-field ' %>
    </div>

    <%= link_to_remove_association( f, class: "add-remove-member" ) do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        <span>Remove Question</span>
    <% end %>

</div>
