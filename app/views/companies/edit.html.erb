<html>

	<head>
		<title>PhoenixBird | Select Team</title>
	</head>

	<body>
		<div class= "wrapper"><div class= "box register-wrap">
			<h2 class= "centered"> Select a Company and an Action</h2>

			<%= form_tag '/companies/action', multipart: true do %>

				<br><br>
				<label for = "select">Select Company: </label>

				<%= select_tag("id", options_from_collection_for_select(@companies, "id", "name")) %>
				<div class= "right">
					<label for = "action">Select Action: </label>

					<select name="desired_action">

						<option value="1"> Add a Founder </option>
						<option value="2"> Profile this Company </option>
					</select><br><br>
				</div>
				<br><br>

				<div class= "notice centered">
					<%= flash[:fail] if flash[:fail] %>
					<%= @message %>
				</div>

				<div class= "centered">
					<%= submit_tag("Submit", :id => "submit-button") %>
				</div>
			<% end %>


		</div></div>
	</body>

</html>
