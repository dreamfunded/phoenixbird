<h1> Create Your Comapanies Profile </h1>

<div class = "notice">
	<%= flash[:file_uploaded] if flash[:file_uploaded] %>
</div>

<%= form_tag '/companies/create', multipart: true do %>
	<label for = "file">Company Image to Upload</label><%= file_field_tag "file" %>
	<%= label_tag(:name, "Name of the startup") %>
	<%= text_field_tag(:name) %>

	<%= label_tag(:description, "Description") %>
	<%= text_field_tag(:description) %>

	<%= submit_tag %>
<% end %>

