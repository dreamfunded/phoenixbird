                        <div class="compthumb__tags">
                          <div class="compthumb__tag __blue"><span><%= company.category %></span></div>
                          <div class="compthumb__tag __blue"><span>DEBT</span></div>
                        </div>
                      </div>
                      <div class="compthumb__footer clearfix">

                            <div class="compthumb__footer__block" >
                              <div class="compthumb__footer__title"><span>Raised</span></div>
                              <div class="compthumb__footer__num"><span><%= number_to_currency company.goal_amount, precision: 0 %></span></div>
                            </div>

                            <div class="compthumb__footer__block">
                              <div class="compthumb__footer__title"><span>Annual Return</span></div>

                                <div class="compthumb__footer__num"><span>10%</span></div>
                            </div>

                            <div class="compthumb__footer__block" >
                              <div class="compthumb__footer__title"><span>Status</span></div>
                              <div class="compthumb__footer__num"><span>Funded</span></div>
                            </div>

                      </div>
                    </div>
              </div>
