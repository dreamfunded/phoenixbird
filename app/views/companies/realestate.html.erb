<% title "DreamFunded " %>


<div class="pageTopBlock companies-bg">
  <div class="container">
    <div class="pageTopBlock__inn">
      <div class="pageTopBlock__title">
        <h1>Real Estate Projects</h1>
      </div>
    </div>
  </div>
</div>
<div class="investments" style="padding-top: 50px;">
  <div class="container">
    <h3 class='center'>These rehab projects were made possible in partnership with Sacramento Housing and Redevelopment Agency (SHRA) under the federal Neighborhood Stabilization Program.</h3><br><br>
    <div class="row">
        <% @companies.each do |company| %>
            <%= link_to company_path(company) do %>
              <div class="col-md-4 col-sm-6">
                    <div class="compthumb">
                        <div class="compthumb__img ofit-block">
                            <%= image_tag(company.cover.url) %>
                        </div>
                        <span class="compthumb__logo">
                            <%= image_tag( company.image.url )%>
                        </span>
                      <div class="compthumb__cnt">
                        <div class="compthumb__name"> <%= link_to company.name, company_path(company) %> </div>
                        <div class="compthumb__desc"><span><%= company.campaign.tagline %></span></div>
                        <div class="compthumb__tags">
                          <div class="compthumb__tag __blue"><span><%= company.category %></span></div>
                        </div>
                      </div>
                      <div class="compthumb__footer clearfix">

                            <!-- <div class="compthumb__footer__block">
                              <div class="compthumb__footer__title"><span>Target</span></div>
                              <div class="compthumb__footer__num"><span><%= number_to_currency company.goal_amount, precision: 0 %></span></div>
                            </div>

                            <div class="compthumb__footer__block">
                              <div class="compthumb__footer__title"><span>Return</span></div>

                                <div class="compthumb__footer__num"><span>9%</span></div>
                            </div> -->

                            <div class="compthumb__footer__block" style="width:100%;">
                              <div class="compthumb__footer__title"><span>Status</span></div>
                              <div class="compthumb__footer__num"><span>Funded</span></div>
                            </div>

                      </div>
                    </div>
              </div>
            <% end %>
        <% end %>
    </div>

  </div>
</div>
