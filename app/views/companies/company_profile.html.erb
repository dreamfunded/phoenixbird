<html>

	<head>
		<title>DreamFunded | <%= @company.name %> </title>
	</head>

	<body>
		<div class= "word-content"><div class="text-content stretch">
			<div class= "topbar">
				<a href= "/companies" class= "darkblue">&#8617; Back</a>
			</div>
			<div class= "company-title indent">
				<h2 class= "darkblue small-margin">
					<%= link_to @company.name, @company.website_link %>
				</h2>
			</div>
			<div class= "stats-container">
				<div class= "profile-image-wrap"> <%= link_to image_tag("companies/#{@company.image_file_name}", :class => "stats-image"), @company.website_link %></div>
				<div class= "numbers"><div class= "numbers-content">
					<div class="meter orange">
						<% @progress = 100 * (@company.invested_amount.to_f / @company.goal_amount) %>
						<% if @progress == 0 %>
							<span class= "front" style="width: 5px"></span>
						<% else %>
					 		<span style='width: <%= @progress %>%'></span>
					 	<% end %>
					</div><br>
					<div class= 'statistics'>
						<div class= "left-column">
							<div>
								<p class= "twentyf no-margin center"> <%= @company.get_status %> <span class= "darkblue twenty"><br> Status </span> </p>
							</div>
							<hr>
							<div>
								<p class= "twentyf no-margin center">$<%= number_with_delimiter(@company.invested_amount, :delimiter => ',') %><br><span class= "darkblue twenty">Invested </span> </p> 
							</div>
						</div>
						<div class= "right-column">
							<div>
								<p class= "twentyf no-margin center">6<br><span class= "darkblue twenty">Days Left</span></p>
							</div>
							<hr>
							<div>
								<p class= "twentyf no-margin center"><%= "%.2f" % @progress %>%<br><span class= "darkblue twenty">Funded<span></p>
							</div>
						</div>
					</div>

				</div></div>
				<% if @company.status == 2 && @company.display != 0 %>
					<%= button_to "Invest in #{@company.name}", nil, :class => "company-button profile-button" %>
				<% else %>
					<%= button_to "Invest in #{@company.name}", nil, :class => "company-button profile-button", :disabled => true %>
				<% end %>
			</div>

			<div class= "description-container">
				<div class= "video-box">
					<% if @company.video_link %>
						<iframe width="650" height="450" src= <%= @company.video_link %> frameborder="0" allowfullscreen class= "indent"></iframe>
					<% end %>
				</div>
				<br><br><br><br>
				<h2 class= "darkblue twentyf indent">Overview</h2>
					<hr>
					<p><%= nl2br(h(@company.description)).html_safe %></p>

				<% if @members != nil && !@members.empty? %>
					<h2 class= "darkblue twentyf indent">Team</h2>
						<hr>
						<div class= "team-band">
							<% @members.each do |member| %>
								<div class= "team-box">
									<% if user_session != nil && user_session.authority == authority[:Admin] %>
										<%= button_to "X", { action: 'remove_founder', id: member.id} , {:class => 'remove-button'} %>
									<% end %>
									<%= image_tag("companies/#{member.image_address}", :class => "image team-pic") %>
									<h2 class= "twenty no-margin"><%= member.name %></h2>
									<br>
									<%= member.content %>
								</div>
							<% end %>
						</div>
					<% end %>

				<h2 class= "darkblue twentyf indent">Highlight</h2>
				<hr>
			</div>
		</div></div>
	</body>

</html>