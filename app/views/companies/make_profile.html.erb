<html>
<head>
	<title>PhoenixBird | Make A Profile</title>
</head>

<body>
	<div class= "wrapper">
		<div class="header-container shadow">
			<div class= "header centered"><h1>Profile A Company</h1></div>
		</div>

		<div class= "box profile-wrap">
			<h2 class= "centered"> Fill out Profile Content for <%= @company.name%></h2>
			<%= form_for @section, :url => {:action => "submit_profile"}, method: "post", multipart: true do |f| %>
				<%= f.hidden_field "id", value: @company.id %>

				<h4>Overview</h4>
				<div class= "description-wrap">
					<%= f.text_area(:overview, :placeholder => "Company Overview", :class => "description-box") %>
				</div>
				<h4>Target Market</h4>
				<div class= "description-wrap">
					<%= f.text_area(:target_market, :placeholder => "Target Market", :class => "description-box") %>
				</div>
				<h4>Current Investor Details</h4>
				<div class= "description-wrap">
					<%= f.text_area(:current_investor_details, :placeholder => "Current Investor Details", :class => "description-box") %>
				</div>
				<h4>Detailed Metrics</h4>
				<div class= "description-wrap">
					<%= f.text_area(:detailed_metrics, :placeholder => "Detailed Metrics", :class => "description-box") %>
				</div>
				<h4>Customer Testimonials</h4>
				<div class= "description-wrap">
					<%= f.text_area(:customer_testimonials, :placeholder => "Customer Testimonials", :class => "description-box") %>
				</div>
				<h4>Competitive Landscape</h4>
				<div class= "description-wrap">
					<%= f.text_area(:competitive_landscape, :placeholder => "Competitive Landscape", :class => "description-box") %>
				</div>
				<h4>Planned Use of Funds</h4>
				<div class= "description-wrap">
					<%= f.text_area(:planned_use_of_funds, :placeholder => "Planned Use of Funds", :class => "description-box") %>
				</div>
				<h4>Pitch Deck</h4>
				<%= f.text_field(:pitch_deck, :placeholder => "Pitch Deck Video Link", :class => "input-box") %>

				<div class = "notice centered">
	              <%= flash[:problem] if flash[:problem] %>
	              <%= @error_message3 %>
	           </div>

				<div class= "centered">
					<%= submit_tag("Submit", :id => "submit-button") %>
				</div>
			<% end %>
		</div>
	</div>
</body>


</html>
