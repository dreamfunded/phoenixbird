<% title "DreamFunded " %>
<div class= "wrapper properties">

	<div class= "header"><h1 class= "centered">Investment Opportunities</h1></div>

	<section class='properties-wrapper fluid-container flex-grid'>
		<% @companies.each do |company| %>
			<div class="col-">
				<div class='property-box'>
					<div class="card-content">
						<%= link_to company do %>
						<div class="card-topbar primary-color">
							<div class="follow" data-following='<%= company.followed_by_current_user %>' data-company-id="<%= company.id %>"></div>
							<%= company.name %>
						</div>

						<div class='companies-back-image' style="background-image: url(<%= company.cover.url(:small) %>)">
							<%#= image_tag( company.cover.url, :class => "property-image") %>
							<div class='logo-image-wrapper'>
								<span class="helper"></span>
								<%= image_tag( company.image.url, :class => "property-logo-image") %>
							</div>
						</div>


						<article class='card-body'>
							<div class='company-tagline'>
								<span class='company-tagline-text'><%= company.campaign.tagline %></span>
							</div>

							<div class='property-detail'>
								<span class='propety-detail-left'>Category</span>
								<span class='property-detail-right'><%= company.campaign.category %></span>
							</div>
						</article>
						<article>
							<section class='campaigb-basic-numbers'>
								<div class='company-details-small-box'>
									<div class='companies-box-name'>Target</div>
									<div class='companies-box-value'><%= number_to_currency company.goal_amount, precision: 0 %></div>
								</div>
								<div class='company-details-small-box'>
									<div class='companies-box-name'>Raised</div>
									<% if company.status == 2 %>
										<div class='companies-box-value'><%= company.fund_america_invested_amount %></div>
									<% else %>
										<div class='companies-box-value'><%= raised_amount(company) %></div>
									<% end %>
								</div>
								<div class='company-details-small-box'>
									<div class='companies-box-name'>Days Left</div>
									<div class='companies-box-value'><%= company.left_days %></div>
								</div>
							</section>
						</article>
						<% end %>
						<%= link_to "Learn More", company, class:'invest-link' %>
					</div>
				</div>
			</div>
		<% end %>
	</section>
</div>

