                            <%= image_tag(company.cover.url) %>
                        </div>

                        <span class="compthumb__logo">
                            <%= image_tag( company.image.url )%>
                        </span>
                      <div class="compthumb__cnt">
                        <div class="compthumb__name"> <a><%= company.name %></a> </div>
                        <div class="compthumb__desc"><span><%= company.campaign.tagline %></span></div>
                        <div class="compthumb__tags">
                          <div class="compthumb__tag __blue"><span><%= company.category %></span></div>
                        </div>
                      </div>
                      <div class="compthumb__footer clearfix">
                        <div class="compthumb__desc funder-by-accredited">Funded by Accredited Investors</div>


