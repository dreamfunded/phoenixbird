<html>
<head>
	<title>DreamFunded | Invest</title>
</head>

<body><div class= "wrapper">

	<div class= "header"><h1 class= "centered"> Invest on Selected Startups </h1></div>

	<div class= "wrap">

	<% if @companies != nil %> 
		<div class= "companies-container">
			<% @companies.each do |company| %>
				<div class= "company-container">
					<% if user_session != nil && user_session.authority == authority[:Admin] %>
						<%= button_to "X", {action: 'remove_company', id: company.id} , {:class => 'remove-button'} %>
					<% end %>
					<div class= "company-image"><div class= "image-wrap">
						<%= link_to image_tag("companies/#{company.image_file_name}", :class => "image"), {:action => 'company_profile', :id => company.id} %>
					</div></div>
					<div class= "company-description">
						<div class= "text"><p> <%= nl2br(h(company.description)).html_safe %> </p></div>
						<div class= "button-wrap"><%= button_to "Invest in #{company.name}", {:action => 'company_profile', :id => company.id }, {:class => 'company-button'} %></div>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
	</div>
</div>
</body>

</html>