                                <%= image_tag("lock-icon", width: 50,  class: 'icon-lock')%>
                                <%= link_to "Sign In to View", new_user_session_path%>
                            </article>
                        <%end%>
                    </div>
                </div>
            </section>

            <hr class="div"/>

            <section class='company-section'>
                <div class='section-container'>
                    <h2 class='section-title'>Why <%= @company.name %>?</h2>
                    <div class='section-content'>
                        <% if current_user %>
                            <p class='sign-in-blur'><%= @company.campaign.elevator_pitch.html_safe  if @company.campaign.elevator_pitch %></p>
                        <% else %>
                            <p class= "fifteen "><%= @company.campaign.elevator_pitch.split(' ').first(30).join(' ').html_safe if @company.campaign.elevator_pitch%>...</p>
                            <article class='centered'>
                                <%= image_tag("lock-icon", width: 50,  class: 'icon-lock')%>
                                <%= link_to "Sign In to View", new_user_session_path%>
                            </article>
                        <%end%>
                    </div>
                </div>
            </section>
            <hr class="div"/>
            <section class='company-section'>
                <div class='section-container'>
                    <h2 class='section-title'>Team Members</h2>
