                                <%= image_tag("lock-icon", width: 50,  class: 'icon-lock')%>
                                <%= link_to "Sign In to View", new_user_session_path%>
                            </article>
                        <%end%>
                    </div>
                </div>
            </section>
            <hr class="div"/>
            <section class="company-section">
                <div class="section-container">
                    <h2 class="section-title">What Others are saying</h2>
                </div>
            </section>
            <hr class="div"/>
            <section class="company-section">
                <div class="section-container">
                    <h2 class="section-title">Business Plan</h2>
                </div>
            </section>

            <hr class="div"/>

            <section class='company-section'>
                <div class='section-container'>
                    <h2 class='section-title'>Highlight</h2>
                    <div class='section-content'>
                        <% if current_user %>
                            <p class= "fifteen "><%= @company.description.html_safe if @company.description %></p>
                        <%else%>
                            <p class= "fifteen "><%= @company.description.split(' ').first(30).join(' ').html_safe %>...</p>
