<% title "DreamFunded | Form C" %>
<div class= "wrapper">
  <div class="header education-center">
    <div class='education-title'>Form C Editor</div>
    <a href="#" class='education-links active-link'>General</a> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links '>People</a> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links disabled-link'>Terms</a> <%= fa_icon "chevron-right"%>
    <a href="#" class='education-links disabled-link'> Disclosures</a> <%= fa_icon "chevron-right"%>
    <span href="#" class='education-links disabled-link'> Financial Info </span><%= fa_icon "chevron-right"%>
    <span href="#" class='education-links disabled-link'> Sign & Submit </span>
  </div>

  <div class= "campaign-box  get-funded ">

  <div class="row">
    <div class=" active">
      <h2 class= "darkblue no-margin centered"><a  id="login-form-link">General Info</a></h2>
    </div>
  </div>

  <div class= "login-container">
    <%= form_for @general_info, :url => {:action => "general_save"}, method: "post" do |f| %>

      <%= f.text_field :name, value: current_user.companies.last.name, placeholder: 'Company Name', :class => "input-box", required:true %>
      <br>


      <div class='get-funded-section-name'>What kind of company is it?</div>
      <%= f.radio_button :kind, "llc",checked: true %>
      <%= f.label :kind, "LLC", :value => "llc" %>
      <br>
      <%= f.radio_button :kind, "corporation" %>
      <%= f.label :kind, "Corporation", :value => "corporation" %>
      <br>

      <div class='get-funded-section-name'>In which state was it incorporated or organized?</div>
      <div class="styled-select select-100-width" >
        <%= f.select( :state, options_for_select(all_states) ) %>
      </div>
      <br>

      <div>
        <div class='get-funded-section-name'>When was it organized?</div>
        <%= f.date_field :date_formed, value: current_user.companies.last.campaign.date_formed, class: 'campaign-input-box' %>
      </div>

      <div>

        <%= f.text_field :employees_numer, value: current_user.companies.last.campaign.employees_numer, placeholder: 'Number of Employees',:class => "campaign-input-box", required:true %>
      </div>

      <div class='get-funded-section-name'>
        Company Location
      </div>

      <%= f.text_field :company_location_address, value: current_user.companies.last.campaign.company_location_address, placeholder: 'Address',:class => "campaign-input-box", required:true %>
      <%= f.text_field :company_location_city, value: current_user.companies.last.campaign.company_location_city,  placeholder: 'City',:class => "campaign-input-box", required:true %>
      <%= f.text_field :company_location_state, value: current_user.companies.last.campaign.company_location_state,  placeholder: 'State',:class => "campaign-input-box", required:true %>
      <%= f.text_field :company_location_zipcode, value: current_user.companies.last.campaign.company_location_zipcode,  placeholder: 'Zipcode',:class => "campaign-input-box", required:true %>
      <br><br>


      <%= f.text_field :website,  value: current_user.companies.last.website_link, placeholder: 'Website', :class => "campaign-input-box", required:true  %><br>
      <%= f.text_field :employer_id_number, value: current_user.companies.last.campaign.employer_id_number, placeholder: 'EIN or tax id number', :class => "campaign-input-box", required:true  %>

      <div class = "notice centered">
        <%= flash[:errors] if flash[:errors] %>
      </div>

      <div class= "centered">
        <%= submit_tag("Continue", :id => "submit-button") %>
      </div>
    <% end %>
  </div>
</div>
