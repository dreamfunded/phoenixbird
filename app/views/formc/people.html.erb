<% title "DreamFunded | Form C" %>
<div class= "wrapper">
		<div class="header education-center">
				<div class='education-title'>Form C Editor</div>
				<a href="#" class='education-links disabled-link'>General</a> <%= fa_icon "chevron-right"%>
				<a href="#" class='education-links disabled-link'>Team</a> <%= fa_icon "chevron-right"%>
				<a href="#" class='education-links disabled-link'>Terms</a> <%= fa_icon "chevron-right"%>
				<a href="#" class='education-links disabled-link'>Disclosures</a>
		</div>

	<div class= "campaign-box  get-funded ">

		<div class="row">
			<div class=" active">
				<h2 class= "darkblue no-margin centered"><a  id="login-form-link">Team</a></h2>
			</div>
		</div>

		<div class= "login-container">
			<%= form_for(@general_info, :url => {:action => "people_save", id: @general_info.id}, method: "post" ) do |f| %>
				<%= f.hidden_field :completed, value: true %>


				<div class='get-funded-section-name'>CEO Name</div>
				<%= f.text_field(:ceo,  class: "campaign-input-box" ) %>
				<br>

				<h3>Principal Security Holders</h3>
				<div class='formc-disclosure'>
					Who owns 20 percent or more voting equity securities of your Company, calculated by voting power? Must be accurate within 120 days ago.
				</div>
				<%= f.fields_for :principal_holders, @holders do |holder| %>
					<%= render 'principal_holder_fields', f: holder %>
				<% end %>
				<div class="links">
					<%= link_to_add_association 'Add', f, :principal_holders %>
				</div>
				<br>

				<h3 > Directors and Officers </h3>
				<br>
				<div class='formc-disclosure'>
					The directors or managers of the managing entity are listed below along with all positions and offices held at the managing entity and their principal occupation and employment responsibilities for the past three (3) years and their educational background and qualifications.
				</div>
				<%= f.fields_for :officers  do |holder| %>
					<%= render 'officer_field', f: holder %>
				<% end %>
				<div class="links">
					<%= link_to_add_association 'Add', f, :officers %>
				</div>

				<div class= "centered">
					<%= f.submit("Continue", :id => "submit-button") %>
				</div>
			<% end %>
		</div>
	</div>
</div>
