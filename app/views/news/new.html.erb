<div class='news'>
    <div class='container'>
		<%= form_for @news, multipart: true do |f|%>

			<%= f.text_field(:title, :placeholder => "Name of Your Article", :class => "input-box") %><br>

			<label for = "Image">Upload Article Image: </label>
			<%= f.file_field "image" %><br><br>

			<%= f.text_field(:video_link, :placeholder => 'Youtube link',  :class=> 'input-box') %><br>


			<div class= "description-wrap">
				<%= f.text_area(:content, :placeholder => "Article Content", :class => "description-box") %>
			</div>

			<div class= "description-wrap">
				<%= f.text_area(:source, :placeholder => "Source", :class => "description-box source") %>
			</div>

			<div class= "description-wrap">
				<%= f.text_area(:source_url, :placeholder => "Source URL", :class => "description-box source") %>
			</div>

			<div class = "notice centered">
				<%= flash[:file_uploaded] if flash[:file_uploaded] %>
			</div>
			<div class = "notice centered">
				<%= flash[:message] if flash[:message] %>
			</div>

			<div class= "centered">
				<%= f.submit("Publish", :id => "submit-button") %>
			</div>
		<% end %>

	</div>
</div>
