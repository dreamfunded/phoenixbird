<html>


<head>
	<title>DreamFunded | News Creation</title>
</head>

<body><div class= "wrapper">
	<div class= "box creation-wrap">
		<h2 class= "centered"> Create a new article </h2>

		<%= form_for New.new, multipart: true do |f|%>

			<%= f.text_field(:title, nil, :placeholder => "Name of Your Article", :class => "input-box") %><br>

			<label for = "file">Upload Article Image: </label>
			<%= f.file_field "file" %><br>

			<div class= "description-wrap">
				<%= f.text_area(:content, :placeholder => "Article Content", :class => "description-box") %>
			</div>

			<div class= "description-wrap">
				<%= f.text_area(:source, :placeholder => "Source", :class => "description-box source") %>
			</div>

			<div class = "notice centered">
				<%= flash[:file_uploaded] if flash[:file_uploaded] %>
			</div>

			<div class= "centered">
				<%= f.submit("Publish", :id => "submit-button") %>
			</div>
		<% end %>
	</div>
</div>

</body>

</html>
