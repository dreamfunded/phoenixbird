<html>

<head>
	<title>DreamFunded | News </title>
	<%= stylesheet_link_tag "news", media: 'all' %>
</head>

<body>

	<div class= "wrapper">
		<div class= "header"><h1 class= "centered">DreamFunded News<h1></div>

		<div class= "wrap">
			<% if @news != nil %>
				<div class= "news-container">
					<% @news.reverse_each do |article| %>
						<div class= "news-single-container">
							<div class= "news-image">
								<%= image_tag "#{article.image_filename}", :class => "article-image" %>
							</div>

							<div class= "news">
								<div class= "title-container"> <%= article.title %> </div>
								<div class= "content-container"> <%= article.content %></div>
								<%= button_to "Read More >", {:action => 'full', :id => article.id }, {:class=>'article-button'} %>
							</div>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>

	</div>

</body>
