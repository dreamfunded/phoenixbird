<html>

<head>
	<title>DreamFunded | News </title>
	<%= stylesheet_link_tag "news", media: 'all' %>
</head>

<body>

	<div class= "wrapper">
		<div class= "header"><h1 class= "centered">Recent News<h1></div>

		<div class= "wrap">
			<% if @news != nil %>
				<div class= "news-container">
					<% @news.each do |article| %>
						<div class= "news-single-container">
							<div class= "news-image">
								<%= image_tag "#{article.image_filename}", :class => "article-image" %>
							</div>

							<div class= "news">
								<div class= "title-container"> <%= article.title %> </div>
								<div class= "content-container"> <%= article.content %></div>
								<div class= "button smaller"><button class= "article-button">Read More</button></div>
							</div>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>

	</div>

</body>

</html>