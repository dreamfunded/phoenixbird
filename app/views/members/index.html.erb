<% title "PhoenixBird | Our Team" %>


<div class="team">
  <div class="container">
    <div class="team__title">
      <h2>Our Team</h2>
    </div>
    <div class="team__cnt">
      <div class="row">
        <% @members.each do |team| %>
          <div class="col-md-4 col-sm-6">
            <div class="mentor">
              <!-- <a href="#" class="mentor__avatar ofit-block"><img src="img/content/mentor.jpg" alt=""></a> -->
              <%= link_to image_tag( team.image.url ), team_path(team), class: 'mentor__avatar ofit-block' %>
              <div class="mentor__cnt">
                <div class="mentor__cnt__inn">
                  <div class="mentor__name"><span><%= team.name %></span></div>
                  <div class="mentor__pos"><span><%= team.title %></span></div>
                  <div class="mentor__desc">
                    <p><%= team.summary %></p>
                  </div>
                </div>
                <div class="mentor__more"><%= link_to "Full Biography", team_path(team) %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $('header').addClass('__white');
</script>
