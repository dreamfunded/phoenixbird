<label for="show-menu" class="show-menu"> Menu </label>
<input type="checkbox" id="show-menu" role="button">

<ul id="menu">

    <% if !current_user %>
      <li><a onclick= "signIn()" id="sign-in-a">Sign Up</a></li>
      <li><a onclick= "login()">Login</a></li>
    <% else %>
      <li><a onclick= "profile()" >Welcome <%= current_user.first_name.capitalize%> <span class="arrow">&#9660;</span></a>
        <ul class="hidden">
          <li><a onclick= "portfolio()">My Investments</a></li>
          <li><a onclick= "campaign()"><%= current_user.my_campaign %></a></li>

          <% if current_user.authority != authority[:Admin] %>
            <li><a onclick= "signOut()" >Sign Out</a></li>
            <% if current_user.startup? %><li><a onclick= "invite()">Invite</a></li> <% end %>
          <% else %>
            <li><a onclick= "invite()">Invite</a></li>
            <li><a onclick= "admin()">Admin Panel</a></li>
            <li><a onclick="location.href='/admin/users';" >New Admin Panel</a></li>
            <li><a onclick="signOut()">Sign Out</a></li>
          <% end %>
          <% if current_user.role == "government"%>
            <li><a onclick= "government_admin()">Admin Panel</a></li>
          <% end %>
        </ul>
      </li>
    <% end %>

  <li><a disabled= "true">About <span class="arrow">&#9660;</span></a>
    <ul class="hidden">
      <li><a onclick= "about()">About Us</a></li>
      <li><a onclick= "faq()">FAQ</a></li>
      <li><a onclick= "team()">Team</a></li>
      <li><a onclick= "news()">News</a></li>
      <li><a onclick= "press()">Press</a></li>
      <li><a onclick= "contact()">Contact Us</a></li>
    </ul>
  </li>


  <li><a onclick="location.href='/events';" >Events</a></li>
  <li><a onclick="location.href='/education';" >Education</a></li>

  <% if current_user %>
    <% if current_user.company %>
      <li><a onclick= "campaign()">Edit My Campaign</a></li>
    <%else%>
      <li><a onclick= "get_funded()">Get Funded</a></li>
     <% end %>
  <% else %>
    <li><a onclick= "get_funded()">Get Funded</a></li>
  <% end %>

  <li><a onclick= "invest()">Investments </a></li>
  <li><a onclick= "how_it_works()">How It Works</a></li>
  <li class='logo-float'><a onclick= "home()" id= "nopadding"><div class='logo'></div></a></li>
</ul>

