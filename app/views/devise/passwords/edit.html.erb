<% title "DreamFunded | Rest Password" %>
<div class="auth">
  <div class="container">
    <div class="auth__cnt">



    <div class="auth__top">
      <div class="auth__top__inn clearfix">
        <a  class='auth__top__link'>Reset Password</a>
      </div>
    </div>


    <div class="auth__form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>

          <div class="input-wrap">
            <%= f.password_field(:password, autofocus: true, autocomplete: "off", class: "form-field", :placeholder => "Password") %>
          </div>
          <div class="input-wrap">
            <%= f.password_field(:password_confirmation, autocomplete: "off", class: "form-field", :placeholder => "Password Confirmation") %>
          </div>


        <div class="auth__form__btn">
          <div class="auth__form__btn__inn">
            <%= f.submit("Change my password", :class => "btn btn-blue") %>
          </div>
        </div>
      <% end %>
    </div>


    </div>
  </div>
</div>

<script type="text/javascript">
    $('header').addClass('__white');
</script>
