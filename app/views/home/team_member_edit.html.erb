<div class= "wrapper">
  <div class= "box creation-wrap">
    <h2 class= "centered"> Edit Member </h2>

    <%#= form_tag :url => url_for(:controller => 'home_controller', :action => 'team_member_update'), method: 'put', multipart: true do |f| %>
    <%= form_tag('/home/edit_member', method: :put, multipart: true ) do %>
      <%= hidden_field_tag('id', @member.id)%>
      <%= text_field_tag :name,@member.name,  :placeholder => "Name", :class => "input-box"%><br>
      <%= text_field_tag :title,@member.title,  :placeholder => "Title", :class => "input-box"%><br>

      <div class= "description-wrap">
        <%= text_area(:fullbio, @member.fullbio, :placeholder => "Full Bio", :class => "description-box") %>
      </div>

      <div class= "description-wrap">
        <%= text_area(:summary, @member.summary, :placeholder => "Summary", :class => "description-box source") %>
      </div>



      <div class = "notice centered">
        <%= flash[:file_uploaded] if flash[:file_uploaded] %>
      </div>

      <label for = "image">Upload Article Image: </label>
      <%= file_field_tag "image" %><br>
      <%= image_tag @member.image.url, class: 'full-image' %>
      <div class= "centered">
        <%= submit_tag("Publish", :id => "submit-button") %>
      </div>
    <% end %>
  </div>
</div>
