<% title "DreamFunded | FAQs " %>
<div class="about">
  <div class="container">
	<h1 class="centered">Frequently Asked Questions</h1>



				<center>
				  <iframe class='youtube-video' width="640" height="360" src="https://www.youtube.com/embed/FguY867__UQ?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
				</center>

				<% @posts.each do |post|%>
					<% if current_user != nil && current_user.authority >= authority[:Editor] %>
						<%= button_to "Delete", {:controller => :posts,  :action => 'destroy', :id => post.id }, :method => :delete, class: 'float-rigth' %>
						<%= link_to 'Edit', "/posts/#{post.id}/edit/faq", {:class => 'right'} %>
						<span class='paragraph-position right'>positon: <%= post.position %></span>
					<% end %>
					<div class='faq_post'>
						<h4 class= "question"><%= post.title%></h4>
						<p class= "faq-answer">
							<%= post.content.html_safe %>
						</p>
						<br>
					</div>
				<% end %>
				<% if current_user != nil && current_user.authority >= authority[:Editor] %>
					<h3><%= link_to 'Create New',  "/posts/new/faq", {:class => 'right', :data => { :page => 'faq' }} %></h3>
				<% end %>


				<br><br>

				<div class= "centered twenty">
					<%= button_to "Get Started", {:action => 'get_started'}, {:id => 'push', class: "link-button"} %>
				</div>

	</div>
</div>

<script type="text/javascript">
    $('header').addClass('__white');
</script>

