<div class= "wrapper"><div class= "box signin-box centered">

  <div class="row">
    <div class="active">
      <h2 class= "no-margin centered darkblue"><a  id="login-form-link">Starting the Process</a></h2>
      <hr>
      <br>
      <div class='liquidate-info'>
        Please fill in the form to send your request to a DreamFunded team member. All information will be kept confidential.</div><br>
    </div>
  </div>

  <div class= "login-container">
    <%= form_tag('liquidate_form', :method => :post, :id => "liquidate_form") do %>
      <%= text_field_tag(:name, nil, :class =>"userbox", :placeholder => "Name", :required => true) %>
      <%= text_field_tag(:company, nil, :class =>"userbox", :placeholder => "Company", :required => true) %>
      <%= text_field_tag(:numShares, nil, :class =>"userbox", :placeholder => "Number of shares") %>
      <%= text_field_tag(:sharesPrice, nil, :class =>"userbox", :placeholder => "Desired share price", :required => true) %>
      <%= text_field_tag(:urgency, nil, :class =>"userbox", :placeholder => "How fast do you want to sell? (i.e. 2 weeks, 2 days, ASAP)") %>
      <%= text_field_tag(:email, nil, :class =>"userbox", :placeholder => "Email", :required => true) %>
      <%= text_field_tag(:phone, nil, :class =>"userbox", :placeholder => "Phone") %>
      <%= text_area(:message, nil, rows: 5, :class =>"userbox expand", :placeholder => "Comment") %>
      <br>

        <div class = "notice centered">
          <h2 class='darkblue' ><%= flash[:notice] if flash[:notice] %></h2>
        </div>
      <div class= "centered">
        <%= submit_tag("Submit", :class => "login-button") %>
      </div>
    <% end %>
  </div>

</div>
